@model IEnumerable<Funcionario>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Página Inicial";
}




<section class="index_section">
    <a asp-controller="Home" asp-action="Adicionar" class="btn btn-outline-success btn-lg">Novo Funcionário</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Data Nascimento</th>
                <th scope="col">Salário</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Funcionario f in Model) {
                <tr>
                    <td>@f.Nome</td>
                    <td>@f.DataNascimento.ToString()</td>
                    <td>R$ @f.Salario</td>
                    <td style="text-align:right;">
                        <a asp-controller="Home" asp-action="Editar" asp-route-id="@f.Id" class="btn btn-warning">Editar</a>
                        <a asp-controller="Home" asp-action="Remover" asp-route-id="@f.Id" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</section>